@model MovieViewModel[]

@{
	ViewData["Title"] = "Home Page";
}

<div class="text-center">
	<div class="owl-carousel owl-theme">
		@for (int i = 0; i < Model.Length; i++)
			{
				var featuredMovie = Model[i];

				<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
					<a asp-controller="Movie" asp-action="Details"
					   asp-route-id="@featuredMovie.Id" class="d-flex justify-content-center">
						<img class="d-block img-responsive" style="height:500px" alt="@featuredMovie.Name"
							 src="@featuredMovie.Image">
					</a>
				</div>

			}
	</div>
</div>
